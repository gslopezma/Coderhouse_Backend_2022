<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCTOS</title>
</head>
<body>
  <section>
  {{#if productsArray}}
  <table class="default">

  <thead>

    <tr>

      <th>Nombre</th>

      <th>Precio</th>

      <th>Foto</th>

    </tr>

  </thead>

  <tbody>
    {{#each productsArray}}
    <tr>

      <td>{{this.nombre}}</td>

      <td>{{this.precio}}</td>

      <td><img src="{{this.foto}}" width="40" height="50" /></td>

      
    </tr>
    {{/each}}
  </tbody>
  <tfoot>    <form action="/" method="GET">
        <div>
            <input type="submit"  value="Ingresar Productos" />
        </div>
    </form></tfoot>
  {{else}}
    <h1>No se encontraron productos</h1>
        <form action="/" method="GET">
        <div>
            <input type="submit"  value="Ingresar Productos" />
        </div>
  {{/if}}
  </section>
</body>
</html>